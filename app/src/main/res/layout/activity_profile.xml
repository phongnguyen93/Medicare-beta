<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phongnguyen93.medicare.activities.ProfileActivity">

    <ScrollView
        android:id="@+id/profile_sector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icons"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/base_color"
            android:id="@+id/sub_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:scaleType="fitCenter"
                android:src="@drawable/applogo" />
            <LinearLayout
                android:padding="4dp"
                android:layout_gravity="center"
                android:id="@+id/fav_sector"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/fav_icon"
                    android:src="@drawable/ic_favorite_border_primary_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:text="@string/fav_text"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:id="@+id/fav_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:padding="16dp"
                android:background="@drawable/base_panel_top_divider"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Name"
                    android:textColor="@color/primary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt_spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Name"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txt_workdays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="@string/edittext_dr_workdays"
                    android:textColor="@color/secondary_text"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_floatingLabelTextColor="@color/primary"
                    app:met_floatingLabelTextSize="14sp"
                    app:met_hideUnderline="true"
                    app:met_primaryColor="@color/primary" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txt_worktime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="@string/edittext_dr_worktime"
                    android:textColor="@color/secondary_text"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_floatingLabelTextColor="@color/primary"
                    app:met_floatingLabelTextSize="14sp"
                    app:met_hideUnderline="true"
                    app:met_primaryColor="@color/primary" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="@string/edittext_dr_address"
                    android:textColor="@color/secondary_text"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_floatingLabelTextColor="@color/primary"
                    app:met_floatingLabelTextSize="14sp"
                    app:met_hideUnderline="true"
                    app:met_primaryColor="@color/primary" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="@string/edittext_dr_phone"
                    android:textColor="@color/secondary_text"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_floatingLabelTextColor="@color/primary"
                    app:met_floatingLabelTextSize="14sp"
                    app:met_hideUnderline="true"
                    app:met_primaryColor="@color/primary" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="@string/edittext_dr_email"
                    android:textColor="@color/secondary_text"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_floatingLabelTextColor="@color/primary"
                    app:met_floatingLabelTextSize="14sp"
                    app:met_hideUnderline="true"
                    app:met_primaryColor="@color/primary" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txt_license"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="@string/edittext_dr_license"
                    android:textColor="@color/secondary_text"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_floatingLabelTextColor="@color/primary"
                    app:met_floatingLabelTextSize="14sp"
                    app:met_hideUnderline="true"
                    app:met_primaryColor="@color/primary" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:overScrollMode="ifContentScrolls"
        android:src="@android:drawable/ic_input_add"
        android:tint="@color/icons"
        app:backgroundTint="@color/primary"
        app:layout_anchor="@+id/profile_sector"
        app:layout_anchorGravity="bottom|end"
        app:layout_behavior="com.phongnguyen93.medicare.ui_view.FABScrollBehavior" />

</android.support.design.widget.CoordinatorLayout>
