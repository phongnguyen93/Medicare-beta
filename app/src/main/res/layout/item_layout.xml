<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:orientation="vertical"
        android:paddingStart="4dp">

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textSize="16sp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableRow>

                <ImageView
                    android:id="@+id/_detail_address"
                    android:src="@drawable/ic_assignment_ind_black_18dp"
                    android:scaleType="fitCenter"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

                <TextView
                    android:paddingStart="4dp"
                    android:id="@+id/detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/_detail_workdays"
                    android:src="@drawable/ic_event_black_18dp"
                    android:scaleType="fitCenter"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

                <TextView
                    android:paddingStart="4dp"
                    android:id="@+id/detail_workdays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow>
                <ImageView
                    android:id="@+id/_detail_worktime"
                    android:src="@drawable/ic_access_time_black_18dp"
                    android:scaleType="fitCenter"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

                <TextView
                    android:paddingStart="4dp"
                    android:id="@+id/detail_worktime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/detail_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/accent"
        android:textSize="16sp" />

</RelativeLayout>